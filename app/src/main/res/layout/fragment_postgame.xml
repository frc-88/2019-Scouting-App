<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Postgame">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/middle_hab"
            android:layout_width="125dp"
            android:layout_height="121dp"
            android:layout_marginStart="220dp"
            android:layout_marginBottom="72dp"
            android:src="@drawable/ic_starting_pos_uncheck"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView" />

        <EditText
            android:id="@+id/comment_box"
            android:layout_width="568dp"
            android:layout_height="141dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Comments..."
            android:inputType="textMultiLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/commit_data_button"
            android:layout_width="189dp"
            android:layout_height="88dp"
            android:layout_marginStart="204dp"
            android:layout_marginTop="45dp"
            android:text="Commit Data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comment_box" />

        <ImageView
            android:id="@+id/low_hab"
            android:layout_width="125dp"
            android:layout_height="121dp"
            android:layout_marginStart="408dp"
            android:layout_marginBottom="44dp"
            android:src="@drawable/ic_starting_pos_uncheck"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="568dp"
            android:layout_height="125dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="125dp"
            android:src="@drawable/endgame_climb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endgame_text" />

        <ImageView
            android:id="@+id/high_hab"
            android:layout_width="125dp"
            android:layout_height="121dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="105dp"
            android:src="@drawable/ic_starting_pos_uncheck"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView" />

        <TextView
            android:id="@+id/endgame_text"
            android:layout_width="362dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="100dp"
            android:text="Where did they end?"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>